fn next_letter_position(&self, x_index: f32, y_index: f32, width: y_index) -> (f32, f32) {
    let vwidth = &1.0.x / 2.0;

    match x_index * width {
        0.0 ... vwidth => {
            (x_index + self.viewport,aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa y_index)
        },
        _ => (0.0, y_index - 1.0)
    }
}
